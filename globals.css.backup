@tailwind base;
@tailwind components;
@tailwind utilities;

/* InnerMap AI 디자인 시스템 - 미니멀 다크 테마 */
:root {
  /* 다크 테마 컬러 팔레트 */
  --bg-primary: #0a0a0a;
  --bg-secondary: #111111;
  --bg-tertiary: #1a1a1a;
  
  --text-primary: #ffffff;
  --text-secondary: #e5e5e5;
  --text-muted: #a3a3a3;
  
  --accent-primary: #3b82f6;
  --accent-secondary: #8b5cf6;
  --accent-success: #10b981;
  
  --border-light: #262626;
  --border-medium: #404040;
  
  /* 미니멀 그림자 */
  --shadow-subtle: 0 1px 3px rgba(0, 0, 0, 0.3);
  --shadow-medium: 0 4px 6px rgba(0, 0, 0, 0.4);
  --shadow-large: 0 10px 15px rgba(0, 0, 0, 0.5);
  
  /* 반응형 브레이크포인트 */
  --mobile: 480px;
  --tablet: 768px;
  --desktop: 1024px;
  --wide: 1280px;
}

/* 전역 기본 스타일 */
body {
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
  background: var(--bg-primary);
  color: var(--text-primary);
}

/* 미니멀 애니메이션 배경 */
.animated-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background: linear-gradient(135deg, #0a0a0a 0%, #111111 50%, #1a1a1a 100%);
  background-size: 200% 200%;
  animation: subtleGradient 30s ease infinite;
}

/* 3D 떠다니는 도형들 */
.floating-shapes {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  pointer-events: none;
  perspective: 1000px;
}

.floating-shape {
  position: absolute;
  animation: float3D 20s ease-in-out infinite;
}

/* 3D 큐브 */
.floating-shape:nth-child(1) {
  width: 60px;
  height: 60px;
  top: 20%;
  left: 10%;
  animation-delay: 0s;
  animation-duration: 25s;
}

.floating-shape:nth-child(1)::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
  border: 1px solid rgba(59, 130, 246, 0.2);
  transform: rotateX(45deg) rotateY(45deg);
  animation: rotate3D 8s linear infinite;
}

/* 3D 피라미드 */
.floating-shape:nth-child(2) {
  width: 80px;
  height: 80px;
  top: 60%;
  left: 80%;
  animation-delay: -5s;
  animation-duration: 30s;
}

.floating-shape:nth-child(2)::before {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border-left: 40px solid transparent;
  border-right: 40px solid transparent;
  border-bottom: 70px solid rgba(139, 92, 246, 0.1);
  border-top: 1px solid rgba(139, 92, 246, 0.2);
  transform: rotateX(60deg) rotateY(0deg);
  animation: rotate3D 12s linear infinite reverse;
}

/* 3D 구체 */
.floating-shape:nth-child(3) {
  width: 70px;
  height: 70px;
  top: 80%;
  left: 20%;
  animation-delay: -10s;
  animation-duration: 22s;
}

.floating-shape:nth-child(3)::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.05) 70%);
  border: 1px solid rgba(59, 130, 246, 0.2);
  border-radius: 50%;
  transform: rotateX(30deg) rotateY(30deg);
  animation: rotate3D 10s linear infinite;
}

/* 3D 육면체 */
.floating-shape:nth-child(4) {
  width: 50px;
  height: 50px;
  top: 10%;
  left: 70%;
  animation-delay: -15s;
  animation-duration: 28s;
}

.floating-shape:nth-child(4)::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(16, 185, 129, 0.1));
  border: 1px solid rgba(59, 130, 246, 0.2);
  transform: rotateX(60deg) rotateY(45deg) rotateZ(30deg);
  animation: rotate3D 15s linear infinite;
}

/* 3D 원통 */
.floating-shape:nth-child(5) {
  width: 40px;
  height: 60px;
  top: 40%;
  left: 50%;
  animation-delay: -8s;
  animation-duration: 18s;
}

.floating-shape:nth-child(5)::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(139, 92, 246, 0.1), rgba(59, 130, 246, 0.1));
  border: 1px solid rgba(139, 92, 246, 0.2);
  border-radius: 50% / 10%;
  transform: rotateX(90deg) rotateY(0deg);
  animation: rotate3D 6s linear infinite reverse;
}

/* 3D 정사각형 */
.floating-shape:nth-child(6) {
  width: 65px;
  height: 65px;
  top: 70%;
  left: 30%;
  animation-delay: -12s;
  animation-duration: 24s;
}

.floating-shape:nth-child(6)::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, rgba(16, 185, 129, 0.1), rgba(59, 130, 246, 0.1));
  border: 1px solid rgba(16, 185, 129, 0.2);
  transform: rotateX(45deg) rotateY(45deg) rotateZ(15deg);
  animation: rotate3D 9s linear infinite;
}

.floating-shape:nth-child(1) {
  width: 80px;
  height: 80px;
  top: 20%;
  left: 10%;
  animation-delay: 0s;
  animation-duration: 20s;
}

.floating-shape:nth-child(2) {
  width: 120px;
  height: 120px;
  top: 60%;
  left: 80%;
  animation-delay: -5s;
  animation-duration: 25s;
}

.floating-shape:nth-child(3) {
  width: 60px;
  height: 60px;
  top: 80%;
  left: 20%;
  animation-delay: -10s;
  animation-duration: 18s;
}

.floating-shape:nth-child(4) {
  width: 100px;
  height: 100px;
  top: 10%;
  left: 70%;
  animation-delay: -15s;
  animation-duration: 22s;
}

.floating-shape:nth-child(5) {
  width: 40px;
  height: 40px;
  top: 40%;
  left: 50%;
  animation-delay: -8s;
  animation-duration: 16s;
}

.floating-shape:nth-child(6) {
  width: 90px;
  height: 90px;
  top: 70%;
  left: 30%;
  animation-delay: -12s;
  animation-duration: 24s;
}

/* 미니멀 그라데이션 변화 애니메이션 */
@keyframes subtleGradient {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

/* 3D 떠다니는 애니메이션 */
@keyframes float3D {
  0%, 100% {
    transform: translateY(0px) translateX(0px) translateZ(0px);
    opacity: 0.3;
  }
  25% {
    transform: translateY(-20px) translateX(10px) translateZ(10px);
    opacity: 0.5;
  }
  50% {
    transform: translateY(-40px) translateX(-15px) translateZ(20px);
    opacity: 0.4;
  }
  75% {
    transform: translateY(-10px) translateX(20px) translateZ(5px);
    opacity: 0.6;
  }
}

/* 3D 회전 애니메이션 */
@keyframes rotate3D {
  0% {
    transform: rotateX(0deg) rotateY(0deg) rotateZ(0deg);
  }
  25% {
    transform: rotateX(90deg) rotateY(90deg) rotateZ(90deg);
  }
  50% {
    transform: rotateX(180deg) rotateY(180deg) rotateZ(180deg);
  }
  75% {
    transform: rotateX(270deg) rotateY(270deg) rotateZ(270deg);
  }
  100% {
    transform: rotateX(360deg) rotateY(360deg) rotateZ(360deg);
  }
}

/* 커스텀 컴포넌트 클래스 */
@layer components {
  /* 미니멀 버튼 스타일 */
  .btn-primary {
    @apply bg-blue-600 hover:bg-blue-700 text-white font-medium px-8 py-4 rounded-lg 
           transition-all duration-200 transform hover:scale-102 active:scale-98
           shadow-sm hover:shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-30;
  }
  
  .btn-secondary {
    @apply bg-gray-800 hover:bg-gray-700 text-white font-medium px-8 py-4 rounded-lg 
           transition-all duration-200 transform hover:scale-102 active:scale-98
           shadow-sm hover:shadow-md focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-30;
  }
  
  .btn-accent {
    @apply bg-purple-600 hover:bg-purple-700 text-white font-medium px-8 py-4 rounded-lg 
           transition-all duration-200 transform hover:scale-102 active:scale-98
           shadow-sm hover:shadow-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-opacity-30;
  }
  
  .btn-outline {
    @apply border border-gray-600 text-gray-300 hover:bg-gray-800 hover:text-white font-medium px-8 py-4 rounded-lg 
           transition-all duration-200 transform hover:scale-102 active:scale-98
           focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-30;
  }
  
  /* 미니멀 카드 스타일 */
  .card {
    @apply bg-gray-900 border border-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300;
  }
  
  .card-soft {
    @apply bg-gray-900/50 backdrop-blur-sm border border-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300;
  }
  
  /* 미니멀 입력 필드 스타일 */
  .input-field {
    @apply w-full px-4 py-3 border border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent 
           transition-all duration-200 bg-gray-800 text-white placeholder-gray-400;
  }
  
  /* 미니멀 그라데이션 텍스트 */
  .text-gradient {
    @apply bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent;
  }
  
  .text-gradient-secondary {
    @apply bg-gradient-to-r from-gray-300 to-gray-400 bg-clip-text text-transparent;
  }
  
  /* 미니멀 섹션 스타일 */
  .section-title {
    @apply text-3xl font-bold text-white mb-8 text-center;
  }
  
  .section-subtitle {
    @apply text-xl font-semibold text-gray-300 mb-6;
  }
  
  /* 미니멀 애니메이션 클래스 */
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  .animate-slide-up {
    animation: slideUp 0.8s ease-out forwards;
  }
  
  .animate-bounce-gentle {
    animation: bounceGentle 3s ease-in-out infinite;
  }
  
  /* 미니멀 호버 효과 */
  .hover-lift {
    @apply transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg;
  }
  
  .hover-scale {
    @apply transition-all duration-300 transform hover:scale-102;
  }
  
  /* 미니멀 상태별 색상 */
  .status-success {
    @apply bg-green-900/20 border border-green-700 text-green-400;
  }
  
  .status-warning {
    @apply bg-yellow-900/20 border border-yellow-700 text-yellow-400;
  }
  
  .status-error {
    @apply bg-red-900/20 border border-red-700 text-red-400;
  }
  
  .status-info {
    @apply bg-blue-900/20 border border-blue-700 text-blue-400;
  }
}

/* 키프레임 애니메이션 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounceGentle {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-8px);
  }
  60% {
    transform: translateY(-4px);
  }
}

/* 미니멀 스크롤바 커스터마이징 */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: var(--bg-secondary);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb {
  background: var(--border-medium);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--text-muted);
}

/* 포커스 스타일 개선 */
*:focus {
  outline: none;
}

/* 반응형 유틸리티 */
@media (max-width: 768px) {
  .mobile-stack {
    @apply flex-col space-y-4 space-x-0;
  }
}

/* 미니멀 포커스 스타일 */
*:focus {
  outline: none;
}

*:focus-visible {
  outline: 2px solid var(--accent-primary);
  outline-offset: 2px;
}

/* 인쇄 스타일 */
@media print {
  body {
    background: white !important;
  }
  
  .no-print {
    display: none !important;
  }
}


